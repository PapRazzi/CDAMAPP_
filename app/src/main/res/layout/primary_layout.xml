<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtvw1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_weight="1.0"
                android:padding="8dp"
                android:text="Coffee Dryness Acoustic Monitor"
                android:textColor="@color/black"
                android:textSize="30dip" />

            <TextView
                android:id="@+id/txtvw5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtvw1"
                android:layout_weight="1.0"
                android:padding="8dp"
                android:text="This is a moisture meter based on the coffee dryness acoustic monitor (cdam) classifier"
                android:textColor="@color/black"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/txtvw6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtvw5"
                android:layout_weight="1.0"
                android:padding="8dp"
                android:text="It maps a recording into one of the classes { wet, mid, dry }"
                android:textColor="@color/black"
                android:textSize="20dip" />

            <com.cardiomood.android.controls.gauge.SpeedometerGauge
                android:id="@+id/speedometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtvw6"
                android:layout_centerInParent="true"
                android:padding="8dp" />

            <TextView
                android:id="@+id/resultTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/speedometer"
                android:layout_weight="1.0"
                android:padding="8dp"
                android:text="Inferred Dryness Level: "
                android:textColor="@color/black"
                android:textSize="20dip" />


            <TextView
                android:id="@+id/txtvw2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resultTxt"
                android:layout_weight="1.0"
                android:padding="8dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dip" />

            <Button
                android:id="@+id/btnControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtvw2"
                android:layout_centerInParent="true"
                android:layout_weight="1.0"
                android:background="#7f8c8d"
                android:padding="8dp"
                android:text=""
                android:textColor="@layout/buttondesign"
                android:textSize="30dip" />

            <TextView
                android:id="@+id/Textdisplay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnControl"
                android:layout_centerInParent="true"
                android:layout_weight="1.0"
                android:padding="8dp"
                android:text=""
                android:textSize="20dip" />

            <TextView
                android:id="@+id/txtspace3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Textdisplay"
                android:layout_weight="1.0"
                android:padding="8dp"
                android:text="  "
                android:textSize="20dip" />

            <TextView
                android:id="@+id/txtspace1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtspace3"
                android:layout_weight="1.0"
                android:padding="8dp"
                android:text="  "
                android:textSize="20dip" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtspace1"
                android:layout_centerInParent="false"
                android:layout_weight="1.0"
                android:background="#7f8c8d"
                android:padding="8dp"
                android:text=""
                android:textColor="@layout/buttondesign"
                android:textSize="20dip" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
